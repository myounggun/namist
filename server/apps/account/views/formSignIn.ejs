<html>
<head>
    <title><%= __("TITLE") %></title>
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap-social.css">
    <link rel="stylesheet" href="/stylesheets/font-awesome.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<div id="sign-in-container" class="account-container">
    <form method="POST" action="/account/signin" id="login-form" class="well">
        <div class="content-header">
            <h1><%= __("SI_FORM_HEADER") %></h1>
            <h5><%= __("SI_FORM_SUB_HEADER") %></h5>
        </div>
        <hr>
        <div class="content-body">
            <% include ../../alert/Flash-Alerts %>
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                <input type="text" id="email" class="form-control required" placeholder="<%= __("PLACEHOLDER_EMAIL") %>" name="email" maxlength="255" required="required"></input>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <input type="password" class="form-control required" placeholder="<%= __("PLACEHOLDER_PASSWORD") %>" name="password" maxlength="128" required="required"></input>
            </div>
            <div class="button-group">
                <button type="submit" id="btn-signin" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-ok-sign"></span><%= __("BTN_SIGN_IN") %></button>
                <span><%= __("SI_FORM_OR") %></span>
                <a href="/account/signup"><%= __("SI_FORM_SIGN_UP_LINK") %></a>
            </div>
            <hr>
            <div class="social-button-group">
                <a href="/account/facebook" class="btn btn-block btn-social btn-sm btn-facebook">
                    <i class="fa fa-facebook"></i><span class="social-name"><%= __("SI_FORM_SOCIAL_FACEBOOK") %></span>
                </a>
                <a href="/account/facebook" class="btn btn-block btn-social btn-sm btn-twitter">
                    <i class="fa fa-twitter"></i><span class="social-name"><%= __("SI_FORM_SOCIAL_TWITTER") %></span>
                </a>
            </div>
        </div>
        <hr>
        <div class="content-footer">
            <a href="/account/recover"><%= __("SI_FORM_RESET_PASSWORD_LINK") %></a>
        </div>
    </form>
</div>
<!-- Modal -->
<div class="modal fade" id="modal-email-error" tabindex="-1" role="dialog" aria-labelledby="modal-email-error" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal-email-error-header"><%= __("MODAL_EMAIL_CHECKER_HEADER") %></h4>
            </div>
            <div class="modal-body">
                <p><%= __("MODAL_EMAIL_CHECKER_BODY") %></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><%= __("BTN_CLOSE") %></button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<script src="/js/lib/jquery-1.11.0.min.js"></script>
<script src="/js/lib/bootstrap.min.js"></script>
<script type="application/javascript">
    $(document).ready(function () {
        $('#btn-signin').click(function () {
            var value = $('#email').val(),
                reg = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

            if (reg.test(value)) {
                return true;
            } else {
                $('#modal-email-error').modal({show: true, keyboard: true});
                return false;
            }
        });
    });
</script>
</body>
</html>