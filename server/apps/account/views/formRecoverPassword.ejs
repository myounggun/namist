<html>
<head>
    <title>Recover Password</title>
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/account/style.css">
</head>
<body>
<div id="recover-password-container" class="account-container">
    <form method="POST" action="/account/recover" id="recover-form" class="well">
        <div class="content-header">
            <h1>Forgot your password?</h1>
            <h5>Please enter your user name and email address to start password recovery</h5>
        </div>
        <hr>
        <div class="content-body">
            <% include ../../alert/Flash-Alerts %>
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                <input type="email" id="email" class="form-control required" placeholder="Your email address" name="email" maxlength="255" required="required"></input>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                <input type="text" class="form-control required" placeholder="New Username" name="username" maxlength="255" required="required"></input>
            </div>
            <div class="button-group">
                <button type="submit" id="btn-recover-cancel" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-remove-sign"></span>Cancel</button>
                <button type="submit" id="btn-recover" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-ok-sign"></span>Recover</button>
            </div>
            <hr>
            <div class="content-footer">
                <p>Namist will send password reset instructions to the email address.</p>
            </div>
        </div>
    </form>
</div>
<div class="modal fade" id="modal-email-error" tabindex="-1" role="dialog" aria-labelledby="modal-email-error" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal-email-error-header">Sorry!</h4>
            </div>
            <div class="modal-body">
                <p>Please enter a valid email address.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/lib/jquery-1.11.0.min.js"></script>
<script src="/js/lib/bootstrap.min.js"></script>
<script type="application/javascript">
    $(document).ready(function () {
        $('#btn-recover-cancel').click(function (e) {
            e.preventDefault();

            var location = window.location,
                target = location.origin + '/account/signin';

            location.replace(target);
        });

        $('#btn-recover').click(function () {
            var value = $('#email').val(),
                    reg = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

            if (reg.test(value)) {
                return true;
            } else {
                $('#modal-email-error').modal({show: true, keyboard: true});
                return false;
            }
        });
    });
</script>
</body>
</html>