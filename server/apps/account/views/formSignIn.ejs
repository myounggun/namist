<html>
<head>
    <title><%= __("Namist/Sign In") %></title>
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/account/style.css">
</head>
<body>
<div id="sign-in-container" class="account-container">
    <form method="POST" action="/account/signin" id="login-form" class="well">
        <div class="content-header">
            <h1><%= __("Sign In") %></h1>
            <h5><%= __("Login to use your Namist account") %></h5>
        </div>
        <hr>
        <div class="content-body">
            <% include ../../alert/Flash-Alerts %>
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                <input type="text" id="email" class="form-control required" placeholder="<%= __("Your email address") %>" name="email" maxlength="255" required="required"></input>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <input type="password" class="form-control required" placeholder="<%= __("Password") %>" name="password" maxlength="128" required="required"></input>
            </div>
            <div class="button-group">
                <button type="submit" id="btn-signin" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-ok-sign"></span><%= __("Sign In") %></button>
                <span><%= __("or") %></span>
                <a href="/account/signup"><%= __("Sign up for Namist") %></a>
            </div>
            <div class="button-group">
               <a href="/account/facebook" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-thumbs-up"></span>Sign in With Facebook</a>
            </div>
        </div>
        <hr>
        <div class="content-footer">
            <a href="/account/recover"><%= __("Forgot your password?") %></a>
        </div>
    </form>
</div>
<!-- Modal -->
<div class="modal fade" id="modal-email-error" tabindex="-1" role="dialog" aria-labelledby="modal-email-error" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="modal-email-error-header"><%= __("Sorry!") %></h4>
            </div>
            <div class="modal-body">
                <p><%= __("Please enter a valid email address.") %></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><%= __("Close") %></button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<script src="/js/lib/jquery-1.11.0.min.js"></script>
<script src="/js/lib/bootstrap.min.js"></script>
<script type="application/javascript">
    $(document).ready(function () {
        $('#btn-signin').click(function () {
            var value = $('#email').val(),
                    reg = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

            if (reg.test(value)) {
                return true;
            } else {
                $('#modal-email-error').modal({show: true, keyboard: true});
                return false;
            }
        });
    });
</script>
</body>
</html>